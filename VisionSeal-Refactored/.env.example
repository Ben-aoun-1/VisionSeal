# VisionSeal Complete - Environment Configuration
# Copy this file to .env and fill in your actual values

# Environment
ENVIRONMENT=development  # development, staging, production
DEBUG=true

# API Configuration
API_HOST=0.0.0.0
API_PORT=8080
API_WORKERS=1
API_RELOAD=true
API_LOG_LEVEL=INFO

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
MAX_FILE_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=.pdf,.docx,.pptx

# Database
DATABASE_URL=postgresql://username:password@localhost:5432/visionseal
DATABASE_ECHO=false
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379
REDIS_MAX_CONNECTIONS=10

# OpenAI
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=gpt-4-turbo
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.7

# Weaviate Vector Database
WEAVIATE_URL=http://localhost:8090
WEAVIATE_API_KEY=  # Optional, leave empty for local development

# Automation Credentials
UNGM_USERNAME=your-ungm-username
UNGM_PASSWORD=your-ungm-password
TUNIPAGES_USERNAME=your-tunipages-username
TUNIPAGES_PASSWORD=your-tunipages-password

# Browser Automation
BROWSER_HEADLESS=true
BROWSER_TIMEOUT=30000
AUTOMATION_MAX_PAGES=10

# Logging
LOG_LEVEL=INFO
LOG_DIR=./logs